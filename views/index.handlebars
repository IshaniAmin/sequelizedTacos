<body>

  <div class="container">

    <h1 class="col-md-6 col-md-offset-4">YUMMY TACOS!</h1>

    <br>

    <img class="col-md-offset-4" src="/assets/img/burger.jpg" alt="Cartoon Burger" style="width:350px;height:300px;">

    <br>

    <div class="col-md-6 col-md-offset-3">
    <h2>Which TACO do you want to add? </h2>
      <div class="col-md-6 col-md-offset-3">
        <form action="/add" method="POST">
        	<textarea name="taco" placeholder=""></textarea>
          <br>
        	<input id="submitButton" class="col-md-offset-2" type="submit"></input>
        </form>
      </div>
    </div>

    <div class="col-md-4 col-md-offset-2">
      <h2>Ready to Eat Taco!</h2>
        <ul>
          {{#each tacos}}
            {{#unless this.devoured}}
              <li>
                {{this.taco}}
                
                <div>
                  <form action="/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devoured" value="true">
                    <button id="eatButton" type="submit">EAT!</button>
                  </form>
                </div>

              </li>
            {{/unless}}
          {{/each}}
        </ul>
    </div>

    <div class="col-md-4">
      <h2>Devoured Tacos</h2>
        <ul>
          {{#each tacos}}
            {{#if this.devoured}}
              <li>
                {{this.taco}}
                <!-- <form action="/{{this.id}}?_method=PUT" method="POST">
                  <input type="hidden" name="devoured" value="false">
                  <button type="submit">UNEAT</button>
                </form> -->
              </li>
            {{/if}}
          {{/each}}
        </ul>
    </div>

  </div>

</body>
